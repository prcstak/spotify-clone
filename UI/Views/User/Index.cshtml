@{
    Layout = "MainLayout";
    ViewData["Title"] = "User";
}

<head>
    <link rel="stylesheet" href="~/css/play-button.css" asp-append-version="true"/>
</head>
<div class="content-spacing">
    <div class="user-header">
        <div>&nbsp;</div>
        <div class="user-info">
            <div class="user-img"></div>
            <div class="block-info">
                <div class="type">PROFILE</div>
                <div class="user-name">Salavat Gilyazetdinov</div>
                <div class="short-content">1 Public Playlists</div>
            </div>
        </div>
    </div> 
    <div class="user-body">
        <div class="user-interaction">
            <div class="edit-button">EDIT PROFILE</div>
        </div>
        <div class="user-releases">
            <div class="content-header">
                <div class="content-block">
                    <a class="content-type">Public Playlists</a>
                </div>
                <a href="#" class="see-all">SEE ALL</a>
            </div>
            <div class="content-body" id="playlists">
            </div>
            <div class="content-header">
                <div class="content-block">
                    <a class="content-type">Top artists this month</a>
                    <p class="content-mention">Only visible to you</p>
                </div>
                <a href="#" class="see-all">SEE ALL</a>
            </div>
            <div class="content-body" id="top-artists">
            </div>
            <div class="content-header">
                <div class="content-block">
                    <a class="content-type">Top tracks this month</a>
                    <p class="content-mention">Only visible to you</p>
                </div>
            </div>
            <div class="content-body" id="top-tracks">
            </div>
        </div>
    </div>
</div>